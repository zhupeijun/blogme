<h1>This is the article page</h1>

<div class="article_list">
		<% @articles.each do |article| %>
					<div class="article"> 
					<table>
						<tr>
							<td class="title">
								<h2>
									<%= link_to "#{article.title}", article %>
								</h2>
							</td>
						</tr>
						<tr>
							<td><p><%= article.date %></p></td>
							<td><p><%= article.author %></p></td>
						</tr>
						<tr><td class="content">
								<p>
								<%= truncate_html(article.content, length: 500) %>
								</p>
						</td></tr>
						<tr>
							<td><p><%= article.tags %></p></td>
							<td>
								<div>
									<%= link_to 'Show', article %> 
									<%= link_to 'Edit', edit_article_path(article),
											method: :get %>
									<%= link_to 'Destroy', article,
										method: :delete, data: 
										{ confirm: 'Are you sure?' } %>
								</div>
							</td>
						</tr>
					</table>
				</div>
			<% end %>
		</div>
			<div>
		<%= paginate @articles %>
			</div>
</div>
